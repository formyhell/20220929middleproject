<form action="<%=request.getContextPath()%>/teacherApply.do" method="post" onSubmit="return post_check();"> 
	<div class="form-group">
	  <label for="name">이름 또는 닉네임</label>
	  <input type="text" class="form-control" id="name" name="name">
	</div>
	<div class="form-group">
	  <label for="tel">전화번호</label>
	  <input type="text" class="form-control" id="tel" name="tel">
	</div>
	<div class="form-group">
	  <label for="subject">희망분야</label>
	  <input type="password" class="form-control" id="subject" name="subject">
	</div>
	<div class="form-group">
	  <label for="comment">소개</label>
	  <textarea class="form-control" rows="5" id="comment" name="comment"></textarea>
	</div>
	<div class="form-group">
	  <label for="link">참고 링크</label>
	  <input type="password" class="form-control" id="link" name="link">
	</div>

	<input type="submit" value="신청하기" class="btn btn-primary"/>

</form>
  
