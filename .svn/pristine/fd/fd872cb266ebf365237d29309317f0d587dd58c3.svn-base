		/////////////////////결제/////////////////////////
	
var memName = "";
var memTel = "";
function input(){		
	memName = document.querySelector('#memName').value;
	memTel = document.querySelector('#memTel').value;
}

IMP.init("imp95268200"); // 예: imp00000000
   function requestPay() {
    	  $.ajax({
			  url : '<%=request.getContextPath()%>/pay/insertOrder.do',
			  type : 'post',
			  data : {
						  orderPrice: <%=sum%>,
						  memMail: "<%=memMail%>"
				     },
			  success : function(rst,status,xhr){
				  var oi = rst.result;
				  console.log(oi, memName, memTel);
				  
				  IMP.request_pay({ // param
 
					  pg: "inicis",
			          pay_method: "card",
			          merchant_uid: oi,
			          name: "_ding",
			          amount: <%=sum%>,
			          buyer_email: "<%=memMail%>",
			          buyer_name: memName,
			          buyer_tel: memTel
				          
			      }, function (rsp) { // callback
			    	  var result = '';
				      	  var suc = 'F';
			          if (rsp.success) {
			        	  console.log('빌링키 발급 성공',rsp)
			        	  suc = "T";
						  $.ajax({
							  url : '<%=request.getContextPath()%>/pay/insertPay.do',
							  type : 'post', 		//method
							  data : {
										  payId	: oi,
										  paySuc : suc,
										  merchantUid : rsp.merchant_uid,
										  memHp : rsp.buyer_tel,
										  memName : rsp.buyer_name,
										  pgProvider : rsp.pg_provider
							     },//없으면 생략
//					 	  success : function(1.전달받는응답데이터 / 2.데이터상태문자열 / 3. xhr속성){},
						  success : function(rst,status,xhr){
							  console.log("InsertPayController로 통신!");
							 
						  },
//					 	  error : function(1.xhr속성 / 2.데이터상태문자열 / 3. error코드 ){},
						  error : function(xhr,status,error){
							  console.log(xhr.status);
							  console.log(xhr.statusText);
						  },
						  dataType : 'json'
					  });
					  alert('결제가 완료 되었습니다.')
					  result = 0;
		          } else {
				        var msg = '결제에 실패하였습니다.';
				        msg += '에러내용 : ' + rsp.error_msg;
				        result ='1';
				        alert(msg);
				    }
				    if(result=='0') {
				    	$.ajax({
							  url : '<%=request.getContextPath()%>/cart/insertCart.do',
							  type : 'post', 		//method
							  data : {payId	: oi},
							     success : function(rst,status,xhr){
							     console.log("InsertCartController로 통신!"); 
								  },
								  error : function(xhr,status,error){
									  console.log(xhr.status);
									  console.log(xhr.statusText);
								  },
								  dataType : 'json'
						});
				    	location.href= "<%=request.getContextPath()%>/pay/Receipt.do";
				    }
		      });
		  },
		  error : function(xhr,status,error){
			  console.log(xhr.status);
			  console.log(xhr.statusText);
		  },
		  dataType : 'json'
	  });
}
		
		
		
